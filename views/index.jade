extends ../templ/head
block Content
    mixin get-friend-form
        #get-friend-form.modal.hide.fade
            script(src="./js/animal_request.js")
            .modal-header
                button(type="button", data-dismiss="modal", aria-hidden="true").close &times;
                h3 Заявка
            .modal-body
                form.form-horizontal
                    input#id-animal(type="text", style="display: none;")
                    .control-group
                        label(for="authLogin").control-label Фамилия
                        .controls
                            input#first-name(type="text")
                    .control-group
                        label(for="authPass").control-label Имя
                        .controls
                            input#last-name(type="text")
                    .control-group
                        label(for="authPass").control-label Контактный телефон
                        .controls
                            input#contact-phone(type="text")
            .modal-footer
                a(href="#", data-dismiss="modal", aria-hidden="true").btn Закрыть
                a#animal-request(href="#").btn.btn-primary Отправить
    .container
        +get-friend-form
        h2.text-center Список животных питомника
        .row
            input#seach-input(type="text", placeholder="Поиск по описанию").input-block-level
            div(style="display: none;").alert
                button(type="button", data-dismiss="alert").close &times;
                strong Спасибо!
                span  Ваша заявка принята. В ближайшее время с вами свяжется нашь специалист.
        .row
            script(src="./js/animals_in_vallere.js")
            ul.thumbnails
                li(style="display: none").span4.animal.tmpl
                    input(type="text", style="display: none;").id-animal
                    div.thumbnail
                        img(src="img/index.png")
                        .caption
                            .row-fluid
                                h3.span6.animal-name
                                    small.animal-type
                                h3.span6
                                    a(href="#", data-toggle="modal").btn.btn-primary.span12.get-friend
                                        span Взять друга
                            p.animal-info