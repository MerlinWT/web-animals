- var mainName="Задний дворик"
- var mainMenu={index: ["Главная", "home"], request: ["Оставить заявку", "edit"], hotel: ["Гостинница", "tags"], diary: ["Дневник", "calendar"], admin: ["Администрирование", "user"]}
- var rightMenu={auth: ["Войти", "user"]}
doctype html
html
    head
        meta(charset="utf-8")
        title Портал приюта "#{mainName}"
        link(rel="stylesheet", href="./bootstrap/css/bootstrap.css")
        link(rel="stylesheet", href="./bootstrap-datepicker/css/datepicker.css")
        link(rel="stylesheet", href="./index.css")

        script(src="./js/jquery-1.11.1.js")
        script(src="./js/jquery.session.js")
        script(src="./bootstrap/js/bootstrap.js")
        script(src="./bootstrap-datepicker/js/bootstrap-datepicker.js")
        script(src="./bootstrap-datepicker/js/locales/bootstrap-datepicker.ru.js")
        script(src="http://maps.google.com/maps/api/js?sensor=false")
        script(src="./js/datetimep.js")
        script(src="./js/upload_image.js")
        script(src="./js/dictionary.js")
        //script(src="./js/ajaxupload-v1.2.js")
    body
        div.back-image
        .navbar.navbar-fixed-top
            .navbar-inner
                .container
                    a(href="index.html").brand
                        i(class="icon-#{mainMenu.index[1]}")
                        span  #{mainMenu.index[0]}
                    ul.nav
                        each item, index in mainMenu
                            if index != 'index'
                                li
                                    a(href="#{index}.html")
                                        i(class="icon-#{item[1]}")
                                        span  #{item[0]}
        .hero-unit.animal-hero
            .container
                .row

                    h1
                        img(src="./img/logo10.png")
                        span #{mainName}
block Content
